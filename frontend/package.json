    "react-test-renderer": "^16.13.1",
    "snowpack": "~2.13.3",
    "typescript": "^4.0.3"
  },
  "scripts": {
    "start": "snowpack dev",
    "build": "./build.sh",
    "pretty": "yarn run prettier --list-different --write src test *json *js",
    "typecheck": "yarn run tsc",
    "doctests:gen": "find src test -name '*ts?' | xargs doctest-ts --jest",
    "doctests:watch": "find src test -name '*ts?' | entr -c sh -c 'yarn run doctests:gen && yarn run jest src --verbose --testEnvironment node'",
    "test": "yarn run doctests:gen && jest"
  },
  "dependencies": {
    "@emotion/core": "^10.0.35",
    "emotion": "^10.0.27",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-is": ">=16.13.1",
    "react-markdown": "^4.3.1",
    "react-router-dom": "^5.2.0"
  },
  "prettier": {
    "printWidth": 100,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "es5",
    "jsxBracketSameLine": true,
    "bracketSpacing": false,
    "arrowParens": "avoid"
  }
