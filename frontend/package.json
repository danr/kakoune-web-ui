    "babel-jest": "^26.5.2",
    "babel-plugin-emotion": "^10.0.33",
    "doctest-ts": "^0.5.0",
    "esbuild": "0.7.14",
    "jest": "^26.6.2",
    "jest-emotion": "^10.0.32",
    "path": "^0.12.7",
